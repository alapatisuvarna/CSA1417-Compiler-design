#include<stdio.h>
#include<ctype.h>

int main()
{
    FILE *fp;
    char ch;
    int chars = 0, words = 0, lines = 0;
    int inword = 0;

    fp = fopen("input.txt", "r");

    if(fp == NULL)
    {
        printf("File not found\n");
        return 0;
    }

    while((ch = fgetc(fp)) != EOF)
    {
        chars++;

        if(ch == '\n')
            lines++;

        if(isspace(ch))
            inword = 0;
        else if(inword == 0)
        {
            inword = 1;
            words++;
        }
    }

    fclose(fp);

    printf("Number of Characters = %d\n", chars);
    printf("Number of Words      = %d\n", words);
    printf("Number of Lines      = %d\n", lines);

    return 0;
}
